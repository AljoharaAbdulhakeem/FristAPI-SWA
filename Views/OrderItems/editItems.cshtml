
@model Order.Models.Product

@{
    ViewData["Title"] = "Edit Order Item";
}

<h2>Edit Order Item</h2>

<form asp-action="editItems" method="post">
    <input type="hidden" asp-for="Id" />

   

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Leave empty to keep existing value" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" placeholder="Leave empty to keep existing value" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" placeholder="Leave empty to keep existing value" />
    </div>

    <div class="form-group"> 
      <label asp-for="Quantity"></label> 
       <input asp-for="Quantity" class="form-control" placeholder="Leave empty to keep existing value" /> 
   </div>

    <br />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Products" class="btn btn-secondary">Cancel</a>
</form>


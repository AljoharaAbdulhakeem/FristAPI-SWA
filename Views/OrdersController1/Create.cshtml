@model CreateOrderViewModel

<form asp-action="Create" method="post" class="form-horizontal" role="form">

    <div class="form-group">
        <label asp-for="CustomerId">Customer</label>
        <div>
            <select asp-for="CustomerId" class="form-control" asp-items="@(new SelectList(Model.Customers, "Id", "Name"))">
                <option value="">-- Select Customer --</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ProductId">Product</label>
        <div>
            <select asp-for="ProductId" class="form-control" asp-items="@(new SelectList(Model.Products, "Id", "Name"))">
                <option value="">-- Select Product --</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <div>
            <input asp-for="Quantity" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Submit" />
    </div>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["SuccessDEL"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessDEL"]
    </div>
}

@{
    var orders = (List<Ordermodel>)ViewData["orders"];

    <table class="table">
        <thread>

            <tr>
                <th scope="col">OrderID </th>
                <th scope="col">CustomerID </th>
                <th scope="col">OrderDate</th>
                <th scope="col">Status</th>
            </tr>
        </thread>
        <tbody>
            @foreach (var order in orders)
            {

                <tr>
                    <th scope="row">@order.OrderId</th>
                    <td>@order.CustomerId</td>
                    <td>@order.OrderDate</td>
                    <td> @order.Status </td>

                    <td>
                        <a asp-controller="OrdersController1" asp-action="OrderDetails" asp-route-customerId="@order.CustomerId" class="btn btn-dark" style="color: white;">Details</a>

                    </td>

                    <td>
                        <a asp-controller="OrdersController1" asp-action="edit" asp-route-customerId="@order.OrderId" class="btn btn-dark" style="color: white;">Edit</a>
                    </td>

                    <td>
                        <form method="post" asp-action="DeleteOrder" asp-asp-controller="OrdersController1" asp-route-id="@order.OrderId">
                            <input type="submit" class=" btn btn-primary" value="Delete" />
                        </form>
                    </td>
                </tr>
         
            }
        </tbody>

    </table>

    <div class="alert alert-info">
        Total (All Orders): <strong>@orders.Count</strong>
    </div>
}
